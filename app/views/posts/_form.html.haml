= form_for @post, html: { class: "form form-horizontal post" } do |f|
  .form-group
    = f.label :title, class: 'control-label'
    .controls
      = f.text_field :title, class: 'form-control', required: true
    = error_span(@post[:title])
  .form-group
    = f.label :category_id, class: 'control-label'
    .controls
      = f.collection_select :category_id, Category.all, :id, :name,
        { selected: f.object.category_id }, class: 'form-control', required: true
    = error_span(@post[:category_id])
  .form-group
    = f.label :tags, class: 'control-label'
    .controls
      = f.collection_select :tag_ids, Tag.all, :id, :name,
        { selected: f.object.tag_ids }, { multiple: true }
    = error_span(@post[:tag_ids])
  .form-group
    = f.label :body, class: 'control-label'
    .controls
      = f.text_area :body, class: 'form-control', required: true
    = error_span(@post[:body])
  = f.submit nil,class: 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), posts_path, :class => 'btn btn-default'
