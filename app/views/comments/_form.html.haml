= form_for @comment, html: { class: "form form-horizontal comment" } do |f|
  .form-group
    = f.label :body, class: 'control-label'
    .controls
      = f.text_field :body, class: 'form-control', required: true
    = error_span(@comment[:body])
  .form-group
    = f.label :user_id, class: 'control-label'
    .controls
      = f.text_field :user_id, class: 'form-control', required: true
    = error_span(@comment[:user_id])
  .form-group
    = f.label :post_id, class: 'control-label'
    .controls
      = f.text_field :post_id, class: 'form-control', required: true
    = error_span(@comment[:post_id])
  = f.submit nil,class: 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), comments_path, :class => 'btn btn-default'
