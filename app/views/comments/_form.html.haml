= form_for @comment, html: { class: "form form-horizontal comment" } do |f|
  .form-group
    = f.label :body, class: 'control-label'
    .controls
      = f.text_area :body, class: 'form-control', required: true
    = error_span(@comment[:body])
  .form-group
    = f.label :user_id, class: 'control-label'
    .controls
      = f.collection_select :user_id, User.all, :id, :username,
        { selected: f.object.user_id }, class: 'form-control', required: true
    = error_span(@comment[:user_id])
  .form-group
    = f.label :post_id, class: 'control-label'
    .controls
      = f.collection_select :post_id, Post.all, :id, :title,
        { selected: f.object.post_id }, class: 'form-control', required: true
    = error_span(@comment[:post_id])
  = f.submit nil,class: 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), comments_path, :class => 'btn btn-default'
